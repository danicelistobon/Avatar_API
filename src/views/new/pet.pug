extends ../layout/index
block content
  .container.mt-5.tam-max
    .row
      form(action='/api/pets/new-pet', method='POST')
        h1.h2.mb-4
          | Create a new pet 
          a.btn.btn-sm.btn-outline-info(href='/user', role='button') Back
        .form-group
          label.text-muted(for='inputID') ID of the pet:
          input#inputID.form-control(type='number', name='id', required='')
        .form-group
          label.text-muted(for='inputName') Name of the pet:
          input#inputName.form-control(type='text', name='name', required='')
        .form-group
          label.text-muted(for='inputName') Type of animal of the pet:
          input#inputName.form-control(type='text', name='typeAnimal', required='')
        .form-group
          label.text-muted(for='inputDescription') Description and link of the owner of the pet:
          textarea#inputDescription.form-control(name='position', rows='2')
        .form-group
          label.text-muted(for='inputImage') Link to the image of the pet:
          input#inputImage.form-control(type='text', name='image', required='')
        button.mt-4.btn.btn-outline-info.btn-block(type='submit') Create
