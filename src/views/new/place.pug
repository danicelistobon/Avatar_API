extends ../layout/index
block content
  .container.mt-5.tam-max
    .row
      form(action='/api/places/new-place', method='POST')
        h1.h2.mb-4
          | Create a new place 
          a.btn.btn-sm.btn-outline-info(href='/user', role='button') Back
        .form-group
          label.text-muted(for='inputID') ID of the place:
          input#inputID.form-control(type='number', name='id', required='')
        .form-group
          label.text-muted(for='inputName') Name of the place:
          input#inputName.form-control(type='text', name='name', required='')
        .form-group
          label.text-muted(for='inputLocation') Location of the place:
          input#inputLocation.form-control(type='text', name='location', required='')
        .form-group
          label.text-muted(for='inputNation') Name and link to the nation of the place:
          textarea#inputNation.form-control(name='nation', rows='2')
        .form-group
          label.text-muted(for='inputImage') Link to the image of the place:
          input#inputImage.form-control(type='text', name='image', required='')
        button.mt-4.btn.btn-outline-info.btn-block(type='submit') Create
