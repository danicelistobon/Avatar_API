extends ../layout/index
block content
  .container.mt-5.tam-max
    .row
      form(action='/api/bendings/new-bending', method='POST')
        h1.h2.mb-4
          | Create a new bending 
          a.btn.btn-sm.btn-outline-info(href='/user', role='button') Back
        .form-group
          label.text-muted(for='inputID') ID of the bending:
          input#inputID.form-control(type='number', name='id', required='')
        .form-group
          label.text-muted(for='inputName') Name of the bending:
          input#inputName.form-control(type='text', name='name', required='')
        .form-group
          label.text-muted(for='inputDescription') Description of the bending:
          textarea#inputDescription.form-control(name='description', rows='4')
        .form-group
          label.text-muted(for='inputImage') Link to the image of the bending:
          input#inputImage.form-control(type='text', name='image', required='')
        button.mt-4.btn.btn-outline-info.btn-block(type='submit') Create
